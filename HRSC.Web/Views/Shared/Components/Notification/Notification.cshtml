@model IEnumerable<NotificationViewModel>
@foreach (var notification in Model)
{
    <div class="alert alert-@notification.Type alert-dismissible fade show mt-1" role="alert" style="max-width: 1370px !important; margin-right:auto!important; margin-left: auto !important;">
        <button aria-label="Close" class="close" data-dismiss="alert" type="button"><span aria-hidden="true"> &times;</span></button>
        <p>
            <strong>@notification.Title</strong> @notification.Message
        </p>
    </div>
}
